# =============================================================================
# PATHWAY API - ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values.
# For production, use .env.production.example as a template.
# For testing, see .env.test

# Environment: development, staging, production, test
ENVIRONMENT=development
DEBUG=true

# =============================================================================
# Database
# =============================================================================
# Development: Local PostgreSQL
DATABASE_URL=postgresql://pathway:pathway_password@localhost:5432/pathway_db

# For testing with PostgreSQL (optional - tests use SQLite by default)
# TEST_DATABASE_URL=postgresql://pathway_test:test_password@localhost:5432/pathway_test_db

# =============================================================================
# Security
# =============================================================================
# Generate secure values for production with: openssl rand -hex 32
API_SECRET_KEY=your-api-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
ADMIN_PASSWORD=your-admin-password-change-in-production

# =============================================================================
# CORS
# =============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# AI Services
# =============================================================================

# Claude API (Primary - fast and accurate)
# Get your key at: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_THINKING_MODEL=claude-opus-4-1-20250805

# DeepSeek API (Fallback/cost optimization)
# Get your key at: https://platform.deepseek.com/
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# =============================================================================
# Storage
# =============================================================================

# Cloudflare R2 Storage (S3-compatible, for video uploads)
# Set up at: https://dash.cloudflare.com/
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=pathway-videos

# =============================================================================
# Email
# =============================================================================

# Resend (for email notifications)
# Get your key at: https://resend.com/
RESEND_API_KEY=re_your-resend-api-key
EMAIL_FROM=Pathway <noreply@pathway.careers>

# =============================================================================
# OAuth - GitHub
# =============================================================================
# Create OAuth App at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# =============================================================================
# OAuth - Google Calendar
# =============================================================================
# Create OAuth credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# Employer Google Calendar OAuth (separate for employer accounts)
GOOGLE_EMPLOYER_REDIRECT_URI=http://localhost:3000/employer-auth/google/callback

# =============================================================================
# URLs
# =============================================================================

# Frontend URL (for invite links, email links)
FRONTEND_URL=http://localhost:3000

# =============================================================================
# Rate Limiting
# =============================================================================
# Set to true to disable rate limiting (for development)
DISABLE_RATE_LIMITING=true

# =============================================================================
# Caching (Optional)
# =============================================================================
# Redis URL for caching (optional, falls back to no-cache if not set)
# REDIS_URL=redis://localhost:6379

# =============================================================================
# Monitoring (Optional)
# =============================================================================
# Sentry DSN for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=DEBUG
