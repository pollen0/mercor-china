# =============================================================================
# TEST ENVIRONMENT CONFIGURATION
# =============================================================================
# This file configures the test environment. It uses SQLite by default for
# fast unit tests. Set TEST_DATABASE_URL to PostgreSQL for integration tests.

# Environment
ENVIRONMENT=test
DEBUG=true

# =============================================================================
# Database (Test)
# =============================================================================
# Default: SQLite in-memory for fast unit tests
# For integration tests, set TEST_DATABASE_URL to a PostgreSQL test database

# SQLite in-memory (default for unit tests - fast, isolated)
TEST_DATABASE_URL=sqlite:///:memory:

# PostgreSQL (for integration tests - uncomment to use)
# TEST_DATABASE_URL=postgresql://pathway_test:test_password@localhost:5432/pathway_test_db

# =============================================================================
# Security (Test) - Use static values for reproducibility
# =============================================================================
API_SECRET_KEY=test-api-secret-key-not-for-production
JWT_SECRET=test-jwt-secret-key-not-for-production
JWT_ALGORITHM=HS256
ADMIN_PASSWORD=test-admin-password

# =============================================================================
# AI Services (Test) - Mocked by default
# =============================================================================
# Leave empty to use mocked services, or set for integration tests
ANTHROPIC_API_KEY=
DEEPSEEK_API_KEY=
DEEPSEEK_BASE_URL=https://api.deepseek.com

# =============================================================================
# Storage (Test) - Mocked by default
# =============================================================================
R2_ACCOUNT_ID=test-account-id
R2_ACCESS_KEY_ID=test-access-key
R2_SECRET_ACCESS_KEY=test-secret-key
R2_BUCKET_NAME=pathway-test-videos

# =============================================================================
# Email (Test) - Mocked by default
# =============================================================================
RESEND_API_KEY=
EMAIL_FROM=Pathway Test <test@pathway.test>

# =============================================================================
# OAuth (Test)
# =============================================================================
GITHUB_CLIENT_ID=test-github-client-id
GITHUB_CLIENT_SECRET=test-github-client-secret

# Google Calendar OAuth (Test)
GOOGLE_CLIENT_ID=test-google-client-id
GOOGLE_CLIENT_SECRET=test-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:3000/auth/google/callback

# =============================================================================
# URLs (Test)
# =============================================================================
FRONTEND_URL=http://localhost:3000
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# =============================================================================
# Rate Limiting (Test) - Disabled
# =============================================================================
DISABLE_RATE_LIMITING=true
