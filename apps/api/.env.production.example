# =============================================================================
# PRODUCTION ENVIRONMENT CONFIGURATION
# =============================================================================
# Copy this file to .env.production and fill in real values.
# NEVER commit production credentials to version control!

# Environment
ENVIRONMENT=production
DEBUG=false

# =============================================================================
# Database (Production)
# =============================================================================
# Use a secure PostgreSQL connection with SSL
DATABASE_URL=postgresql://user:password@host:5432/pathway_production?sslmode=require

# =============================================================================
# Security (Production) - CHANGE ALL VALUES!
# =============================================================================
# Generate with: openssl rand -hex 32
API_SECRET_KEY=<generate-a-secure-random-key>
JWT_SECRET=<generate-a-different-secure-random-key>
JWT_ALGORITHM=HS256
ADMIN_PASSWORD=<secure-admin-password>

# =============================================================================
# AI Services (Production)
# =============================================================================
# Claude API (Primary)
ANTHROPIC_API_KEY=sk-ant-your-production-key
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_THINKING_MODEL=claude-opus-4-1-20250805

# DeepSeek API (Fallback)
DEEPSEEK_API_KEY=sk-your-production-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# =============================================================================
# Storage (Production)
# =============================================================================
# Cloudflare R2
R2_ACCOUNT_ID=your-production-account-id
R2_ACCESS_KEY_ID=your-production-access-key
R2_SECRET_ACCESS_KEY=your-production-secret-key
R2_BUCKET_NAME=pathway-videos-production

# =============================================================================
# Email (Production)
# =============================================================================
RESEND_API_KEY=re_your-production-key
EMAIL_FROM=Pathway <noreply@pathway.careers>

# =============================================================================
# OAuth (Production)
# =============================================================================
# GitHub OAuth
GITHUB_CLIENT_ID=your-production-github-client-id
GITHUB_CLIENT_SECRET=your-production-github-client-secret

# Google Calendar OAuth
GOOGLE_CLIENT_ID=your-production-google-client-id
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_REDIRECT_URI=https://app.pathway.careers/auth/google/callback

# =============================================================================
# URLs (Production)
# =============================================================================
FRONTEND_URL=https://app.pathway.careers
CORS_ORIGINS=https://app.pathway.careers,https://www.pathway.careers

# =============================================================================
# Rate Limiting (Production) - Enabled
# =============================================================================
DISABLE_RATE_LIMITING=false

# =============================================================================
# Monitoring (Production)
# =============================================================================
# Optional: Sentry DSN for error tracking
# SENTRY_DSN=https://xxx@sentry.io/xxx

# Optional: Log level
LOG_LEVEL=INFO
