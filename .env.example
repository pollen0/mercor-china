# =============================================================================
# PATHWAY - ROOT ENVIRONMENT CONFIGURATION
# =============================================================================
# This file contains shared environment variables for the entire monorepo.
# Individual apps may have their own .env files with app-specific settings.

# =============================================================================
# Database (Shared)
# =============================================================================
DATABASE_URL=postgresql://pathway:pathway_password@localhost:5432/pathway_db
POSTGRES_USER=pathway
POSTGRES_PASSWORD=pathway_password
POSTGRES_DB=pathway_db

# For testing (optional - tests use SQLite by default)
# TEST_DATABASE_URL=postgresql://pathway_test:test_password@localhost:5432/pathway_test_db

# =============================================================================
# Frontend (Next.js)
# =============================================================================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXTAUTH_SECRET=your-nextauth-secret-change-in-production
NEXTAUTH_URL=http://localhost:3000

# =============================================================================
# Backend (FastAPI)
# =============================================================================
API_SECRET_KEY=your-api-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-change-in-production
JWT_ALGORITHM=HS256
CORS_ORIGINS=http://localhost:3000

# =============================================================================
# AI Services
# =============================================================================
# Claude API (Primary)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key

# DeepSeek API (Fallback)
DEEPSEEK_API_KEY=sk-your-deepseek-api-key
DEEPSEEK_BASE_URL=https://api.deepseek.com

# =============================================================================
# Storage
# =============================================================================
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=pathway-videos

# =============================================================================
# Email
# =============================================================================
RESEND_API_KEY=re_your-resend-api-key

# =============================================================================
# OAuth
# =============================================================================
# GitHub
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

# Google Calendar
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
